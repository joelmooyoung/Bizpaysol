# Development Environment Configuration

# Application Environment
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql://ach_user:ach_password@postgres:5432/ach_processing_dev
SUPABASE_URL=https://your-dev-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_dev_service_role_key

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=dev_jwt_secret_key_for_development_only
JWT_EXPIRE=7d

# Encryption Configuration (32 characters for AES-256)
ENCRYPTION_KEY=dev_encryption_key_32_chars_long

# ACH Configuration
ACH_IMMEDIATE_DESTINATION=123456789
ACH_IMMEDIATE_ORIGIN=987654321
ACH_COMPANY_NAME=Development Company
ACH_COMPANY_ID=1234567890

# SFTP Configuration (development/test server)
SFTP_HOST=test-sftp-server.com
SFTP_PORT=22
SFTP_USERNAME=test_user
SFTP_PASSWORD=test_password

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=admin

# Development Features
ENABLE_DEBUG_ROUTES=true
ENABLE_SWAGGER_DOCS=true
ENABLE_QUERY_LOGGING=true

# Rate Limiting (more permissive for development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Limits
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=.txt,.csv,.json

# Development Database Seeding
SEED_DATABASE=true
CREATE_SAMPLE_DATA=true

# Hot Reload Configuration
WATCH_FILES=true
WATCH_EXTENSIONS=.ts,.js,.json